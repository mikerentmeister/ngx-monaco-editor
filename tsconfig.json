{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@materia-ui/ngx-monaco-editor": [
        "dist/ngx-monaco-editor"
      ],
      "@materia-ui/ngx-monaco-editor/*": [
        "dist/ngx-monaco-editor/*"
      ]
    }
  }
}
